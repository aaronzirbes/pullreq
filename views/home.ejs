<% layout('mainLayout') -%>
<% block('header', partial('header')) -%>
<div id="loadingMessage">
    <h1>
        Welcome <%- user.name %>
    </h1>
    <div id="progressBar" class="progress progress-danger progress-striped active">
        <div class="bar" style="width: 20%;"></div>
    </div>
</div>
<div class="row-fluid" id="main">
    <div class="span2">
        <div id="menu" class="hide">
            <h5>Tags</h5>
            <ul class="unstyled" id="teamTags"></ul>
            <h5>Options</h5>
            <ul class="unstyled" id="menuItems">
                <li>
                    <i class="icon-refresh"></i>
                    <a href="/home"> Refresh</a>
                </li>
                <li>
                    <i class="icon-reorder"></i>
                    <a href="/repos/edit"> Choose repos</a>
                </li>
                <li>
                    <i class="icon-external-link"></i>
                    <a href="<%- user.url %>" target="_blank"> View profile</a>
                </li>
                <li>
                    <i class="icon-signout"></i>
                    <a href="/auth/logout"> Sign out</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="span10" id="content">
        <div id="projects"></div>
    </div>
</div>
<% block('scripts', partial('templates')) -%>
<% script('/js/showdown.js') -%>
<% script('/js/pullreq.js') -%>
<% script('/js/pages/home.js') -%>



